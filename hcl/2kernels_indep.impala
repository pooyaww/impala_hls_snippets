fn @read(buf: &mut [i32], i: i32) -> i32 { bitcast[&[1][i32]](buf)(i)}

fn main(a:i32) -> () {
    let device = 0;
    let ptr = alloc_hls(device, sizeof[i32]() * 4).data as &mut [i32];
    let ptr_cpu = alloc_cpu(sizeof[i32]() * 4).data as &mut [i32];

    with hls(device) {
        let mut b = 0;
        b = read(ptr,0);
    }

    with hls(device) {
        ptr_cpu(0)=a;
    }
}

